<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="#041107">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="128dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/hotpot_icon" />

            <Button
                android:id="@+id/login_signUp_tab"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/hotpot_green"
                android:fontFamily="@font/kodchasan_bold"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login_signIn_tab"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#041107"
                android:fontFamily="@font/kodchasan_bold"
                android:text="Login"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kodchasan_bold"
                android:gravity="center"
                android:text="Login"
                android:textColor="#26783D"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#26783D"
                android:fontFamily="@font/kodchasan_bold"
                android:textStyle="bold"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:text="'Get Inspired, Eat Adventurously!'" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textView4"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37dp"
                    android:text="Email" />

                <EditText
                    android:id="@+id/signInEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_ext"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:scaleX=".8" />

                <TextView
                    android:id="@+id/textView5"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37dp"
                    android:text="Password"
                    />

                <EditText
                    android:id="@+id/signInPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_ext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:scaleX=".8"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="150dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/signIn_bottom_Btn"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Login"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/hotpot_green"
                    android:fontFamily="@font/kodchasan_bold"
                    android:textSize="20dp"
                    android:padding="1dp"
                    android:textColor="#FFF"
                    android:layout_margin="16dp" />



            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="128dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/hotpot_icon" />

            <Button
                android:id="@+id/login_signUp_tab"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/kodchasan_bold"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login_signIn_tab"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/hotpot_green"
                android:fontFamily="@font/kodchasan_bold"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:gravity="center"
                android:fontFamily="@font/kodchasan_bold"
                android:textColor="#26783D"
                android:text="Sign In" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#26783D"
                android:fontFamily="@font/kodchasan_bold"
                android:textStyle="bold"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:text="'Get Inspired, Eat Adventurously!'" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37dp"
                    android:text="Email" />

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_login"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:scaleX=".8" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37dp"
                    android:text="Password" />

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:scaleX=".8" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/signIn_signIn_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_in"
                android:backgroundTint="@color/hotpot_green"
                android:fontFamily="@font/kodchasan_bold"
                android:scaleX=".899"
                android:scaleY=".82"
                android:text="Sign In"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/signIn_google_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/sign_in_with_google"
                android:text="Button" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
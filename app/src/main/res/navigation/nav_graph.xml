<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUp">

    <fragment
        android:id="@+id/signIn"
        android:name="com.example.hotpot.SignIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
    </fragment>

    <fragment
        android:id="@+id/signUp"
        android:name="com.example.hotpot.SignUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_to_dietFilters"
            app:destination="@id/dietFilterFragment" />
    </fragment>

    <fragment
        android:id="@+id/dietFilterFragment"
        android:name="com.example.hotpot.DietFilters"
        android:label="diet_filter"
        tools:layout="@layout/fragment_diet_filter" >
    </fragment>

</navigation>
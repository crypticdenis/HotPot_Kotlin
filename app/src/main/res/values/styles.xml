<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hotpot_light_green</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="colorPrimaryDark">@color/hotpot_dark_green</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/hotpot_light_green</item>
    </style>

    <style name="NavigationBarStyle">
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:textColor">@color/hotpot_light_green</item>
        <item name="android:textSize">25dp</item>
    </style>
    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here: colors, text sizes, etc. -->
        <item name="colorAccent">@color/hotpot_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationBarTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/hotpot_light_green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FilterCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <!-- You can add a custom font as well -->
    </style>

    <style name="FiltersHeadingStyle">
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:padding">16dp</item>
    </style>



</resources>

    <!-- res/values/styles.xml -->
    <!-- Base application theme -->
